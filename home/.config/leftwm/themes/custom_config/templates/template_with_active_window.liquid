{% assign mine_open_colors = '%{B#616587}' %}
{% assign visible_open_colors = '%{F#179299}' %}
{% assign busy_open_colors = '%{B#37394b}' %}
{% assign close_colors = '%{B-}%{F-}' %}
{% assign layout_background = '%{B#35515a}' %}
{% assign separation = '%{F#6e6c7e}|%{F-}' %}

{% for tag in workspace.tags %}
%{A:leftwm-command 'GoToTag {{ tag.index | plus:'1' }} false':}
{% if tag.mine %}
{{mine_open_colors}}  {{ tag.name }}  {{close_colors}}
{% elsif tag.visible  %}
{{visible_open_colors}}  {{ tag.name }}  {{close_colors}}
{% elsif tag.busy  %}
{{busy_open_colors}}  {{ tag.name }}  {{close_colors}}
{% else %}
  {{ tag.name }}  
{% endif %}
%{A}
{% endfor %}
  {{separation}}  {{layout_background}}  {{ workspace.layout }}  {{close_colors}}
%{c}
{% if window_title != '' %}
{{mine_open_colors}}  {{ window_title }}  {{close_colors}}
{% endif %}
